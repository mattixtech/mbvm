#!/bin/bash
########################################
# Project:     MBVM
# File:        build
# Author:      Matthew Brooks
# Created:     2018-07-21
########################################

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}" > /dev/null)" && pwd)"
EXE_FILE="mbvm"

echo "Building..."
gcc -o mbvm "$DIR"/src/*

if [ $? -eq 0 -a -x "$DIR"/"$EXE_FILE" ]; then
  echo "Build complete!"
fi
